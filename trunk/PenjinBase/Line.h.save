#ifndef LINE_H
#define LINE_H

#include "PenjinTypes.h"
#include "Colour.h"

class Line
{
    public:
        Line();
        
        virtual ~Line();
        
        template <class T>
        void setStartPosition(const T& pos){start = pos;}
        template <class T>
        void setEndPosition(const T& pos){end = pos}
        
    private:
        #ifdef PENJIN3D
            Point3df start;
            Point3df end;
        #else
            Point2df start;
            Point2df end;
        #endif
        Colour colour;
};

#endif // LINE_H
